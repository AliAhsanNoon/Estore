@model List<com.Entities.Category>
@{
    ViewBag.Title = "CategoryTable";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



    <p id="cMgm" class="display-4 text-center">Category Manegement Section</p>
    <div class="row">
        <div class="col-md-2">
            <button id="createNew" type="button" value="Add New" class="mt-3 btn-sm btn button ">
                <i class="fa-plus-circle"></i>
            </button>
        </div>
    </div>


    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Is Featured</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="tblbody">
            @foreach (var cat in Model)
             {
                <tr>
                    <td>@cat.Name</td>
                    <td>@cat.Description</td>
                    <td><input type="checkbox" name="isFeatured" disabled checked="@cat.isFeatured"></td>
                    <td>
                        <button data-id="@cat.ID" type="button" class="_editBtn btn btn-sm btn-info"> <i class="fa-pencil"></i></button>
                        <button data-id="@cat.ID" type="button" class="_deleteBtn btn btn-sm btn-danger"><i class="fa-trash"></i></button>
                    </td>
                </tr>
             }
        </tbody>
    </table>
<script type="text/javascript">

    /* ---------    Add New Category Section    --------- */
    $("body").on("click", "#createNew", function () {
        $.ajax({
            url: '@Url.Action("Create","Category")',
            type: 'GET'
        }).done(function (response) {
            $("#actionContainer").html(response);
            $('html, body').animate({
                scrollTop: ($('#saveCategory').offset().top)
            }, 1000);
        }).fail(function () { alert('Fail'); });
    });

    $("body").on("click", "#addNewCat", function () {
        $.ajax({
            url: '@Url.Action("Create","Category")',
            type: 'POST',
            data: $("#saveCategory").serialize()
        }).done(function (response) {
            $("#tableConatiner").html(response);
            $("#actionContainer").html("");
            $('html, body').animate({
                scrollTop: ($('#cMgm').offset().top)
            }, 1000);
        })
    });

    /* ---------    Add New Category Section Ends Here  --------- */

    /* ---------    Edit Category Section    --------- */
    $("body").on("click", "._editBtn", function () {
        $.ajax({ url: '@Url.Action("Edit","Category")/' + $(this).attr('data-id'), type: 'GET' })
            .done(function (response) {
                $('#actionContainer').html(response);
                $('html, body').animate({
                    scrollTop: ($('#updateCat').offset().top)
                }, 1000);
            }).fail(function () { alert('Request Failed'); });
    });

    $("body").on("click", "#updateCat", function () {
        $.ajax({
            url: '@Url.Action("Edit","Category")',
            data: $('#updateCategoryForm').serialize(),
            type: 'POST'
        }).done(function (response) {
            $("#tableConatiner").html(response);
            $("#actionContainer").html("");
            $('html, body').animate({
                scrollTop: ($('#cMgm').offset().top)
            }, 1000);
        }).fail(function () { alert('Request Failed'); });
    });
    /* ---------    Edit Category Section Ends Here  --------- */

    /* ---------    Delete Category Section    --------- */
    $("body").on("click", "._deleteBtn", function () {
        swal({
            title: "Are you sure?",
            text: "Once deleted, you will not be able to recover this product record!",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {
                if (willDelete) {
                    $.ajax({
                        url: '@Url.Action("Delete", "Category")/' + $(this).attr('data-id'),
                        type: 'POST'
                    }).done(function (response) {
                        $("#tableConatiner").html(response);
                        }).fail(function () { swal("Your record is safe!");})
                    swal("Poof! Your prdouct record has been deleted!", {
                        icon: "success",
                    });
                } else {
                    swal("Your record is safe!");
                }
            });
    });
    /* ---------    Delete Category Section Ends Here  --------- */

     /* ---------    UploadImage Section    --------- */
    $("body").on("change", "#imageUpload", function () {
            var element = this;
            var formData = new FormData();
            var totalFiles = element.files.length;
            for (var i = 0; i < totalFiles; i++) {
                var file = element.files[i];
                formData.append("Photo", file)
            }
            $.ajax({
                type: 'POST',
                url: '/Shared/UploadImage',
                dataType: 'json',
                data: formData,
                contentType: false,
                processData: false
            }).done(function (response) {
                if (response.Success) {
                    $("#categoryImage").attr("src", response.ImageURL);
                    $("#categoryImage").width(250);
                    $("#categoryImage").height(300);
                    $("#imageUrl").val(response.ImageURL);
                }
                console.log(response);
            }).fail(function (XMLHttpRequest, textStatus, errorThrown) { alert('Fail') });
    });
     /* ---------    UploadImage Section Ends Here   --------- */
</script>