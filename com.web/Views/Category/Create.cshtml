
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<div class="modal-body">
    <div class="row">
        <div class="col-md-6">
            <form id="saveCategory">

                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Product Name" name="Name" />
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Description" name="Description" />
                </div>

                <div class="form-group">
                    <label>Is Featured?</label>
                    <div class="input-group">
                        <div class="radio form-control">
                            <label><input name="isFeatured" type="radio" value="True" /> Yes</label>
                        </div>
                        <div class="radio form-control">
                            <label><input name="isFeatured" type="radio" value="False" /> No</label>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <input type="file" id="imageUpload" class="form-control" name="Image" accept=".png, .jpg" />
                    <input name="imageUrl" id="imageUrl" type="hidden" />
                </div>

                <div class="form-group">
                    <input type="button" value="Submit" id="addNewCat" class="btn btn-primary" />
                </div>

            </form>
        </div>
        <div class="col-md-6">
            <div class="card">
                <img id="categoryImage" src="" class="img-thumbnail img-fluid " />
            </div>
        </div>

    </div>
</div>