@{ ViewBag.Title = "Create";}
<div class="modal-body">
    <div id="cCat" class="title-section">
        <h2 class="title">
            Create Category
        </h2>
    </div>
    <div class="row">
        <div class="col-md-6">
            <form id="saveCategory">

                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Product Name" name="Name" />
                </div>

                <div class="form-group">
                    <textarea rows="3" class="form-control" type="text" placeholder="Description" name="Description"></textarea>
                </div>

                <div class="form-group">
                    <label>Is Featured?</label>
                    <div class="input-group">
                        <div class="radio form-control">
                            <label><input name="isFeatured" type="radio" value="True" /> Yes</label>
                        </div>
                        <div class="radio form-control">
                            <label><input name="isFeatured" type="radio" value="False" /> No</label>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <input type="file" id="imageUpload" class="form-control" name="Image" accept=".png, .jpg" />
                    <input name="imageUrl" id="imageUrl" type="hidden" />
                </div>

                <div class="form-group">
                    <input type="button" value="Submit" id="addNewCat" class="btn btn-primary" />
                </div>

            </form>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="col-md-8">
                    <img id="categoryImage" src="" class="img-thumbnail img-fluid " />
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    $('#saveCategory').validate({
        rules: {
            Name: {
                required: true,
                minlength: 3,
                maxlength: 50,
            },
            Description: {
                maxlength: 500
            }
        },
        messages: {
            Name: {
                required: "<span class='text-danger'>Name is required</span>",
                minlength: "<span class='text-danger'>Minimum Length is 3 </span>",
                maxlength: "<span class='text-danger'>Maximum Length is 50</span>"
            },
            Description: {
                maxlength: 'Maximum Length is 500'
            }
        }
    });
</script>