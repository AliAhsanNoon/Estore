
@{
    ViewBag.Title = "EStoreAppConfigurations";
}

<h2>EStoreAppConfigurations</h2>

<div class="modal-body">
    <div id="cCat" class="title-section">
        <h2 class="title">
            Application Configuration
        </h2>
    </div>
    <div class="row">
        <div class="col-md-6">
            <form id="saveCategory">

                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Facebook Page Url" name="FacebookURL" />
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Address" name="Description" />
                </div>

                <div class="form-group">
                    <input type="file" id="imageUpload" class="form-control" name="Image" accept=".png, .jpg" />
                    <input name="imageUrl" id="imageUrl" type="hidden" />
                </div>

                <div class="form-group">
                    <input type="button" value="Submit" id="appDetails" class="btn btn-primary" />
                </div>

            </form>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="col-md-8">
                    <img id="categoryImage" src="" class="img-thumbnail img-fluid " />
                </div>
            </div>
        </div>

    </div>
</div>