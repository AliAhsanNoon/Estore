@model com.web.ViewModels.HomeViewModel
@{
    ViewBag.Title = "Home Page";
}

@{ 
    var _p = Model.FeaturedProducts;
    var _c = Model.FeaturedCategories;
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    @*<div class="col-md-4">*@
        <p class="text-capitalize lead text-center text-muted">Featured Categories</p>
        @foreach (var cat in _c)
         {
            <div class="col-md-4">
                <div class="card" style="width: 18rem;">
                    <img src="@cat.ImageURL" width="200" height="200" class="card-img-top" alt="@cat.Name">
                    <div class="card-body">
                        <h5 class=" text-center card-title"><span class="lead">@cat.Name</span></h5>
                        <p class="card-text text-muted"> @cat.Description.</p>
                        <a href="#" class="btn btn-primary">Go somewhere</a>
                    </div>
                </div>
            </div>
         }
</div>
<div class="row">
    @*<div class="col-md-4">*@
    <p class="text-capitalize lead text-center text-muted">Featured Products</p>
    @foreach (var product in _p)
    {
        <div class="col-md-4">
            <div class="card" style="width: 18rem;">
                <img src="@product.ImageURL" width="200" height="200" class="card-img-top" alt="@product.Name">
                <div class="card-body">
                    <h5 class=" text-center card-title"><span class="lead">@product.Name</span></h5>
                    <p class="card-text text-muted"> @product.Description.</p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
        </div>
    }
</div>