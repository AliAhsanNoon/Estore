@model com.web.ViewModels.ProductWidgetViewModel
@{
    ViewBag.Title = "Products";
}

@if (Model != null && Model.Products != null)
{
    if (!Model.isLatestProduct)
    {
        <ul class="flat-filter style-1 text-center max-width-682 clearfix">
            <li class="active"><a href="#" data-filter="*">All Product</a></li>
            @foreach (var item in Model.Products.Select(x => x.Category).ToList().Distinct())
             {
                <li><a href="#" data-filter=".@item.Name.ToLower()">For @item.Name’s</a></li>
             }
        </ul>

    }
}

<div class="divider h54"></div>

<div class="product-content product-fourcolumn clearfix">

    <ul class="product style2 clearfix isotope-product">
        @foreach (var _p in Model.Products)
        {
            <li class="product-item">
                <div class="product-thumb clearfix">
                    <div class="col-md-12">
                        <a href="#" class="product-thumb">
                            <img src="@_p.ImageURL" style="height:250px; width:286px;" alt="image">
                        </a>

                    </div><span class="new">New</span>
                </div>
                <div class="product-info text-center clearfix">
                    <span class="mt-2 product-title">@_p.Name</span>
                    <div class="price">
                        <ins>
                            <span class="amount">$@_p.Price</span>
                        </ins>
                    </div>
                    <ul class="flat-color-list width-14">
                        <li>
                            <a href="#" class="red"></a>
                        </li>
                        <li>
                            <a href="#" class="blue"></a>
                        </li>
                        <li>
                            <a href="#" class="black"></a>
                        </li>
                    </ul>
                </div>
                <div class="add-to-cart text-center">
                    <a href="#">ADD TO CART</a>
                </div>
                <a href="#" class="like"><i class="fa fa-heart-o"></i></a>
            </li>
        }
    </ul>

</div>